{
  "redirects": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "claritypledge.com" }],
      "destination": "https://understandingpledge.com/",
      "permanent": true
    },
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "claritypledge.com" }],
      "destination": "https://understandingpledge.com/:path",
      "permanent": true
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "www.claritypledge.com" }],
      "destination": "https://understandingpledge.com/",
      "permanent": true
    },
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "www.claritypledge.com" }],
      "destination": "https://understandingpledge.com/:path",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/((?!api|_next|.*\\..*).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
